	@model PhotoBoom.Endpoint.ViewModel.PhotoDetailsViewModel

@{
	var photoPath = "~/Images/" + (Model.Photo.PhotoPath ?? "default-place-holder.png");
}


<div class="row justify-content-center m-3">
	<div class="col-sm-8">
		<div class="card">
			<div class="card-header">
				<h1>@Model.Photo.Title</h1>
			</div>

			<div class="card-body text-center">
				<img class="card-img-top" src="@photoPath" asp-append-version="true" />

				<h4>Photo ID : @Model.Photo.Id</h4>
				<h4>Title : @Model.Photo.Title</h4>
				<h4>Tag : @Model.TagStr</h4>

			</div>
			<div class="card-footer text-center">
				<a asp-controller="Gallery" asp-action="Index"
				   class="btn btn-primary">Back</a>
				<a asp-action="Delete" asp-controller="Gallery"
				   asp-route-id="@Model.Photo.Id"
				   class="btn btn-danger">Delete</a>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script src="~/js/CustomScript.js"></script>
}
